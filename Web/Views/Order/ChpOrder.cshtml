@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link type="text/css" rel="Stylesheet" href="/Content/themes/pink/global.css" />
    <script type="text/javascript" src="/Scripts/abs.js"></script>
    <script type="text/javascript" src="/Scripts/list.js"></script>
</head>
<body>
    <div id="dlContent" class="content">
        <div id="datalist">
        </div>
    </div>
    <script type="text/javascript">

        var dataList=$.list({
            id: "datalist",
            height: 350,
            pageEnabled: true,
            multiselect: true,
            columns: [{
                width: 30,
                type: "number"
            },{
                width: 150,
                header: "订单号",
                columnName: "code"
            },{
                width: 100,
                header: "日期",
                sortAble: true,
                columnName: "date"
            },{
                width: 100,
                header: "姓名",
                columnName: "userName"

            },{
                width: 100,
                header: "手机",
                columnName: "mobile"
            },{
                width: 100,
                header: "金额",
                sortAble: true,
                columnName: "amount"
            },{
                width: 100,
                header: "状态",
                sortAble: true,
                columnName: "status"
            }]
        });

        function search(page,pageSize,dtFrom,dtTo) {
            dataList.load("ChpOrder/",{
                page: page,
                pageSize: pageSize,
                dtFrom: dtFrom,
                dtTo: dtTo
            });
        }
        search(1,10);
    </script>
</body>
</html>
