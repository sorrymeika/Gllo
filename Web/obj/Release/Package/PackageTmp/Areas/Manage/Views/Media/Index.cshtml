@section header{
    <style type="text/css">
        .upload th { padding: 20px 5px 0px 10px; font-weight: bold; color: #333; }
        .upload form { padding-top: 10px; }
        .upload td { padding-top: 6px; }
        .cont { width: 400px; height: 200px; }
        .view { position: absolute; width: 30px; height: 60px; }
        .view1 { position: absolute; width: 60px; height: 30px; }
        .view2 { position: absolute; width: 60px; height: 60px; }
    </style>
    <script type="text/javascript">
        $.ready(function () {
            window.handleViewPic=function (res) {
                if(res.success) {
                    $("view"+res.id).src="/home/ViewPic/?picGuid="+res.guid;
                }
                else
                    alert(res.msg)
            };

            window.handleResult=function (res) {
                if(res.success)
                    alert("上传成功！");
                else
                    alert(res.msg)
            };

            for(var i=1;i<=14;i++) {
                $("file"+i).on("change",(function (j) {
                    return function () {
                        $("form"+j).action="/home/ViewPic/?width=30&height=60&id="+j;
                        $("form"+j).submit();
                    }
                })(i));
                $("submit"+i).on("click",(function (j) {
                    return function () {
                        $("form"+j).action="/Manage/Media/Upload/";
                        $("form"+j).submit();
                    }
                })(i))
            }
            $("submitn").on("click",function () {
                $("formn").submit();
            })
        });
    </script>
}
